@model ETicaret.Entities.Product
<div class="col-md-4">
    <div class="card mb-3">
        <img src="~/img/@Model.ImageUrl" alt="@Model.Name" width="150" height="200" class="ml-5 mt-2" />

        <div class="card-body">
            <h4 class="card-title">
                <a class="text-dark" asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h4>
            <small class="text-muted"></small>
            <i class="fas fa-lira-sign"></i> @Model.Price
        </div>

        <div class="card-footer text-center">

            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-dark btn-sm">Detaylar</a>

            @if(User.Identity.IsAuthenticated)
            {
        <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline">

            <input type="hidden" name="productId" value="@Model.Id" />
            <input type="hidden" name="quantity" value="1" />
            <button type="submit" class="btn btn-outline-dark btn-sm ml-3">Sepete Ekle </button>

        </form>

            }


        </div>

    </div>
</div>